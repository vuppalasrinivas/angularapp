<p id="notice"><%= notice %></p>
<div class="container">
    <h1>Listing Employees</h1>
    <div class="row">
        <% @employees.each do |employee| %>
            <div class="col-md-3">              
              <p>Name: <%= employee.name %></p>
              <p>Address: <%= employee.address %></p>
              <p>Designation: <%= employee.designation %></p>
              <%= image_tag employee.image.url(:medium)  %>
              <%= link_to 'Show', employee, :class=>"btn btn-success" %>
              <%= link_to 'Edit', edit_employee_path(employee), :class=>"btn btn-info" %>
              <%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %>              
            </div>
         <% end %>
    </div>
    </br>
    <div class="row">
    <%#= link_to 'New Employee', new_employee_path %>
    <!-- Button trigger modal -->
    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalHorizontal">
    create employee
    </button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModalHorizontal" tabindex="-1" role="dialog" 
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" 
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Modal title
                </h4>
            </div>
            
            <!-- Modal Body -->
            <div class="modal-body">                
                <%= form_for @employee, :html => {:class => 'form-horizontal', :role=>"form", multipart: true } do |f| %>
                      <div class="form-group">
                        <%= f.label :name, :class=>"col-sm-2 control-label" %>
                        <%= f.text_field :name, :class=>"col-sm-10" %>
                      </div>
                      <div class="form-group">
                        <%= f.label :address, :class=>"col-sm-2 control-label" %>
                        <%= f.text_area :address, :class=>"col-sm-10"  %>
                      </div>
                      <div class="form-group">
                        <%= f.label :designation, :class=>"col-sm-2 control-label" %>
                        <%= f.text_field :designation, :class=>"col-sm-10"  %>
                      </div>
                      <div class="form-group">
                        <%= f.label :image, :class=>"col-sm-2 control-label" %>
                        <%= f.file_field :image, :class=>"col-sm-10"  %>
                      </div>                             
            </div>
            
            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <%= f.submit :class=>"btn btn-primary" %>
            </div>
            <% end %>
        </div>
    </div>
</div>

